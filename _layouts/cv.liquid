---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: site.baseurl | relative_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i> Download CV
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="cv">
      {% if page.cv_pdf %}
        <!-- Embed the PDF in an iframe if cv_pdf is provided -->
        <div style="width: 100%; height: 800px;">
          <iframe
            src="{{ page.cv_pdf | prepend: site.baseurl | relative_url }}"
            width="100%"
            height="800"
            title="CV PDF"
          >
            Please click on the icon on the top right to download my CV if it does not show up in your browser.
          </iframe>
        </div>
      {% else %}
        <p>No CV available to display.</p>
      {% endif %}
    </div>
  </article>
</div>
